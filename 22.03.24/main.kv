
#:set color_txt_d "#000000"
#:set color_btn_bg "#fdf2e7"
#:set color_btn_bg_pr 125/255,17/255,175/255,1
#:set color_bg "#700CBC"
#:set color_a "#FB8604"
#:set color_b "#fbe6d0" 

<ButtonMenu@Button>:
    size_hint_y: 0.3
    font_size: "30sp"
    color: color_txt_d
    background_color: color_btn_bg
    background_normal: ''
    on_release: self.background_color = color_btn_bg
    background_down: ''
    on_press: self.background_color = color_btn_bg_pr
    #font_name: 'assets/BungeeSpice-Regular.ttf'





<MenuScreen>:
    canvas.before:
        Color:
            rgba: 1,1,0,1
        Rectangle:
            pos:self.pos
            size:self.size
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '20dp'
     
        Label:
            text: 'Numismatist'
            font_name: 'assets/RedditMono-VariableFont_wght.ttf'
            font_size: '30dp'
            color: 'black'
            size_hint_y: .2
        Image:
            source: 'assets/images/0.png'
            size_hint_y: .3
            allow_stretch: True

        Widget:
            size_hint_y: 0.3

        ButtonMenu: 
            text: "Start"
            on_press: root.manager.current = 'game'
        ButtonMenu:
            text: "Shop"
            on_press: root.manager.current = 'shop'
        ButtonMenu:
            text: "Exit"
            on_release: app.stop()

<GameScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.1
            Label:
                text: 'Coins: ' + str(root.points)
                font_name: 'assets/RedditMono-VariableFont_wght.ttf'
                ont_size: '30dp'
        FloatLayout:
            size_hint_y: 0.8
            Coin:
                id: coin
        BoxLayout:
            size_hint_y: 0.1
            ButtonMenu:
                text:"Back"
                on_press: root.manager.current = 'menu'
                size_hint: None,None
                size: "100dp", "50dp"
                on_press: root.manager.current = 'menu'
                
<ShopScreen>:
    canvas.before:
        Color:
            rgba: 1,1,0,1
        Rectangle:
            pos:self.pos
            size:self.size
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '10dp'
     
        Label:
            text: 'Shop'
            font_name: 'assets/RedditMono-VariableFont_wght.ttf'
            font_size: '30dp'
            color: 'black'
            size_hint_y: .2

        Widget:
            size_hint_y: 0.1

        ButtonMenu: 
            text: "Autoclicker\nPrice: 10 coins\n(Not available)"
            size_hint_y: 0.3
            size: "200dp", "100dp"
            on_press: root.buy_autoclicker()

        ButtonMenu:
            text:"Back"
            on_press: root.manager.current = 'menu'
            size_hint: None,None
            size: "100dp", "50dp"
            on_press: root.manager.current = 'menu'

<Coin>
    allow_stretch: True
    size_hint: None, None
    size: '200dp', '200dp'
    center: self.parent.center    